<div class="row">
    <div class="col-md-6">
        <h2>Hub Chat</h2>
        <div class="container">
            <input type="text" id="message" />
            <input type="button" id="sendmessage" value="Send" />
            <input type="hidden" id="displayname" />
            <ul id="discussion"></ul>
        </div>
    </div>
    <div class="col-md-6">
        <h2>Hub Procesor</h2>
        <div class="container">
            <div id="HubProcesorEstatus"></div>
        </div>
    </div>
</div>
