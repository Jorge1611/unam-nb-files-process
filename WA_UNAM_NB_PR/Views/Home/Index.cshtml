@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET</h1>
    <p class="lead">ASP.NET is a free web framework for building great Web sites and Web applications using HTML, CSS and JavaScript.</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Learn more &raquo;</a></p>
</div>

<div class="row">
    
    <div class="col-md-6">
        <h2>Hub Procesor</h2>
        <div class="container">
            <div class="col-sm" id="HubProcesorEstatus">Cargando estado actual del proceso</div>
            <input type="button" class="btn-success" id="start" value="Iniciar proceso" />
            <input type="button" class="btn-danger" id="stop" value="Detener proceso" />
        </div>
    </div>
    

</div>
@section scripts {
<!--Script references. -->
<!--Reference the jQuery library. -->
<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="~/signalr/hubs"></script>
<!--Add script to update the page and send messages.--> 


    <script type="text/javascript">
        $(function () {
            console.info('$.connection', $.connection);
            var singleton = $.connection.processHub;
            $.connection.hub.logging = true;

            $.connection.hub.start().done(function (){
                singleton.server.getStatus();

                $('#start').click(function () {
                    singleton.server.startProcess();
                });

                $('#stop').click(function () {
                    singleton.server.stopProcess();
                });
            });

            singleton.client.getupdate = function () {
                singleton.server.getStatus();
            }

            singleton.client.update = function (status) {
                $('#HubProcesorEstatus').html("Estatus actual del proceso-> " + status);
                console.info('estatus', status);

                };
        });
       
    </script>
}
